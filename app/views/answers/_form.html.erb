  <% if user_signed_in? %>
    <div class="answer-box">

    <h2>Submit an answer</h2>
    <%= form_for @answer do |f| %>
      Answer: <%= f.text_area :content, size: "45x8" %><br>
      <%= f.hidden_field :question_id, value: @question.id %>
      <%= f.submit "Submit!" %>

    <% end %>
  <% else %>
    <p>Please <%= link_to "sign in", new_user_session_path %> to submit an answer.</p>
  <% end %>

</div>