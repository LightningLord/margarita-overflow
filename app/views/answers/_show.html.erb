        <div style="width:85%; float: left;">
            <span class="answer-text"><%= answer.content %></span>
        </div>
        <div>
            <%= render partial: "votes/answer_new", locals: { answer: answer} %>
        </div>
            <div id="sig">
                Answered by <span class="em"><%= link_to answer.user.username, user_path(answer.user) %></span> on <span><%= answer.created_at.strftime("%m/%d/%Y %I:%M%P") %></span> <span><%= gravatar_for(answer.user) %></span>
                <p>
                    <%= link_to "Comment on Answer", answer_path(answer), :class => "answer_comment_button" %> <% if answer.comments.count > 0 %>
                </p>
                <hr>
                Comments: <%= answer.comments.count %> <% end %> <% answer.comments.each do |comment| %>
                <p>
                    "<%= comment.content %>" <span class="comment-by">by</span> <%= link_to comment.user.username, user_path(comment.user) %>, <%= time_ago_in_words(comment.created_at) %> ago <% end %>
                </p>
            </div>
