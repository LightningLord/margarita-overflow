<%= render partial: "votes/answer_new", locals: { answer: answer} %>


<div class="pull-left">
  <span><%= answer.content %></span>
</div>

<div>
  <div id="sig">
    Answered by <span class="em"><%= link_to answer.user.username, user_path(answer.user) %></span> on
    <span><%= answer.created_at.strftime("%m/%d/%Y %I:%M%P") %></span>
    <span><%= gravatar_for(answer.user) %></span>
    <%= link_to "Comment on Answer", answer_path(answer), :class => "answer_comment_button" %>
    <% if answer.comments.count > 0 %>
  <hr>

 Comments:     <%= answer.comments.count %>
    <% end %>
    <% answer.comments.each do |comment| %>
   <p> "<%= comment.content %>" <span style="font-style: italic">by</span>  <%= link_to comment.user.username, user_path(comment.user) %>
      <% end %>
  </span>
  </div>

</div>
